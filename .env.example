# Azure Configuration
# Copy this file to .env and fill in your actual values

# Azure Authentication (use az login or service principal)
# If using service principal, uncomment and fill these in:
# ARM_CLIENT_ID=your-client-id
# ARM_CLIENT_SECRET=your-client-secret
# ARM_TENANT_ID=your-tenant-id
# ARM_SUBSCRIPTION_ID=your-subscription-id

# Azure Region
AZURE_REGION=eastus

# SSH Configuration
SSH_USERNAME=nathan
SSH_PUBLIC_KEY_PATH=~/.ssh/id_rsa.pub

# IoT Configuration - Replace with your actual values
MQTT_BROKER_IP=your.mqtt.broker.ip
API_KEY=your-api-key-here
INTERNAL_HOSTNAME=your-hostname.local

# Email for SSL certificates
CERTBOT_EMAIL=your-email@example.com
